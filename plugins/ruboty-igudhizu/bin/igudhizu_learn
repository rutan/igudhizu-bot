#!/usr/bin/env ruby
# encoding: utf-8

require 'ruboty/igudhizu'

Ruboty::Igudhizu.init

unless ARGV[0]
  puts 'require filename'
  exit 1
end

lines = File.read(ARGV[0]).split(/\r?\n/)
lines.each_with_index do |text, i|
  Ruboty::Igudhizu::Learner.new(text).learn
  puts "#{i + 1} / #{lines.size}"
end

